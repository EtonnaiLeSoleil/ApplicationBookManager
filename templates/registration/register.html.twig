{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Créer un compte</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
        <button type="submit" class="btn btn-success mt-3">S'inscrire</button>
        {{ form_end(registrationForm) }}

        <p class="mt-3">
            Déjà inscrit ? <a href="{{ path('app_login') }}">Se connecter</a>
        </p>
    </div>
{% endblock %}
