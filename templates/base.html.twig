{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}BookManager{% endblock %}</title>

    {# Bootstrap 5 CDN #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>
<body>

{# Navbar simple #}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="{{ path('book_index') }}">BookManager</a>
        <div>
            {% if app.user %}
                Connecté en tant que {{ app.user.email }}
                <a class="btn btn-sm btn-outline-light ms-2" href="{{ path('app_logout') }}">Déconnexion</a>
            {% else %}
                <a class="btn btn-sm btn-outline-light" href="{{ path('app_login') }}">Connexion</a>
            {% endif %}
        </div>
    </div>
    {% if app.user %}
        <span class="navbar-text me-2">Bonjour {{ app.user.email }}</span>
        <a class="btn btn-outline-danger btn-sm" href="{{ path('app_logout') }}">Déconnexion</a>
    {% else %}
        <a class="btn btn-outline-primary btn-sm me-2" href="{{ path('app_login') }}">Connexion</a>
        <a class="btn btn-success btn-sm" href="{{ path('app_register') }}">Inscription</a>
    {% endif %}

</nav>

<div class="container">

    {# Flash messages (succès/erreur) #}
    {% for label, messages in app.flashes %}
        {% for msg in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ msg }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {# Contenu principal #}
    {% block body %}{% endblock %}

</div>

<footer class="bg-light text-center py-3 mt-4">
    <p class="mb-0">&copy; {{ "now"|date("Y") }} BookManager</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
